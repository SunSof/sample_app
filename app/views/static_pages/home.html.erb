<% if logged_in? %> 
<div class="container mt-4">
	<div class="row">
		<div class="col-lg-4">
			<aside> 
				<section class="user_info">
					<%= render 'shared/user_info' %> 
				</section>
				<section class="stats mb-5">
					<%= render 'shared/stats' %> 
				</section>
				<div class="col-8 p-0">
					<section class="micropost_form">
						<%= render 'shared/micropost_form' %> 
					</section>
			</div>
			</aside> 
		</div>
		<div class="col-8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %> 
		</div>
	</div>
</div>

<% else %>
<div class="center jumbotron">
	<h1>Welcome to the Sample App</h1>
	<h2> This is the home page for the
		<a class="text-danger" href="http://www.railstutorial.org/">Ruby on Rails
			Tutorial</a> sample application.
	</h2>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-danger" %>
	</div>
	<%= link_to image_tag("rails.png", alt: "Rails logo", width:"300", height:"300", class:" mx-auto d-block"), 'http://rubyonrails.org/' %>
<% end %>