<% provide(:title, "Log in") %>
<div class="container">
  <h1 class="mt-3 mb-4">Log in</h1>
  <form accept-charset="UTF-8" action="/login" method="post">
    <%= form_for(:session, url: login_path) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class:"form-label"%>
      <%= f.email_field :session_email, class: 'form-control', id: "session_email", name:"session[email]", type:"text"%>
    </div>
    <div class="mb-3">
      <%= f.label :password, class:"form-label" %> <%= link_to "(forgot password)", new_password_reset_path, class:"text-danger small" %>
      <%= f.password_field :password, class: 'form-control', id:"session_password", name:"session[password]", type:"password" %>
      <%= f.label :remember_me, class: "checkboxinline" do %> 
			<%= f.check_box :remember_me %>
			<span>Remember me on this computer</span>
			<% end %>
    </div>
    <div class="mb-3 mt-4">
    <%= f.submit "Log in", class: "btn btn-danger" %> 
    </div>
    <% end %>
    <p class="mb-5">New user? <%= link_to "Sign up now!", signup_path, class:"text-danger" %></p> 
  </form>
</div>
