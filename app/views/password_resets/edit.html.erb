<% provide(:title, "Reset password") %>
<div class="container">
  <h1 class="mt-3 mb-4">Reset password</h1>
  <form>
    <%= form_for(@user,
    url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
     
    <div class="mb-3">
      <%= hidden_field_tag :email, @user.email %>
    </div>

    <div class="mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %> <%= f.submit "Update password", class: "btn btn-danger" %> 
      <% end %>
    </div>
  </form>
</div>
