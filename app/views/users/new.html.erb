<% provide(:title, 'Sign up') %>
<div class="container">
    <h1>Sign up</h1>
    <div class="row">
        <div class="col-lg-2">
            <%= form_for(@user) do |f| %> 
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation, "Confirmation" %> 
            <%= f.password_field :password_confirmation %>
            <%= f.submit "Create my account", class: "btn btn-danger mt-3" %> 
            <% end %>
        </div>
    </div>   
</div>    
